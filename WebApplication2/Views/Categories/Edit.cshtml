@using WebApplication2.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.Helpers

@model Category

@section title{
	@if(Model!=null){
  <h3>Category:@Model.Name</h3>
   }
}

<form method="post" asp-controller="categories" asp-action="add">
	<div class="text-danger" asp-validation-summary="All"></div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Name" class="col-form-label">Name</label>
		</div>
		<div class="col-6">
			<input type="text" name="Name" asp-for="Name" class="form-control" value="@Model.Name"/>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Description" class="col-form-label">Description</label>
		</div>
		<div class="col-6">
			<input type="text" name="Description" asp-for="Description" class="form-control" value="@Model.Description" />
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<input type="submit" class="btn btn-primary" value="Save" />
		</div>
		<div class="col-6">
		</div>
	</div>

</form>